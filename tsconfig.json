{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["libs/common/src/*"],
      "@db/*": ["libs/db/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./libs/common" },
    { "path": "./libs/db" },
    { "path": "./apps/gateway" },
    { "path": "./apps/collector-fb" },
    { "path": "./apps/collector-ttk" },
    { "path": "./apps/reporter" }
  ]
}
